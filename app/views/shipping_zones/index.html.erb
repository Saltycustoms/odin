<p id="notice"><%= notice %></p>

<h1>Shipping Zones</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Disabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipping_zones.each do |shipping_zone| %>
      <tr>
        <td><%= shipping_zone.name %></td>
        <td><%= shipping_zone.disabled %></td>
        <td><%= link_to 'Show', shipping_zone %></td>
        <td><%= link_to 'Edit', edit_shipping_zone_path(shipping_zone) %></td>
        <td><%= link_to 'Destroy', shipping_zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

