<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Att</th>
      <th>Line1</th>
      <th></th>
      <th>State</th>
      <th>Post code</th>
      <th>Country code</th>
      <th>City</th>
      <th>Tel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.user_id %></td>
        <td><%= address.att %></td>
        <td><%= address.line1 %></td>
        <td><%= address. %></td>
        <td><%= address.state %></td>
        <td><%= address.post_code %></td>
        <td><%= address.country_code %></td>
        <td><%= address.city %></td>
        <td><%= address.tel %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

