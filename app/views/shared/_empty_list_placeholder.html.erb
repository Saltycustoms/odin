<div class="text-center subheader">
  <%= content_tag :h3, "Your #{title ||= nil} will appear here" if title %>
  <%= content_tag :h3, message ||= nil if message %>
  <%= content_tag(:p, subtitle ||= nil) if subtitle %>
  <%= link_to button_path ||= nil, class: "button" do %>
    <span class="fa fa-plus">&nbsp;</span><%= button_title %>
  <% end unless button_path.nil? %>
</div>
