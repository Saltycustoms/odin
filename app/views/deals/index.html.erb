
<% content_for :content do %>
  <h1>Deals</h1>

  <table>
    <thead>
      <tr>
        <th>Department</th>
        <th>Name</th>
        <th>No of pcs</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @deals.each do |deal| %>
        <tr>
          <td><%= deal.department_id %></td>
          <td><%= deal.name %></td>
          <td><%= deal.no_of_pcs %></td>
          <td><%= link_to 'Show', deal %></td>
          <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
          <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Deal', new_deal_path %>
<% end %>
