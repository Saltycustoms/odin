<%= simple_nested_form_for @quotation, url: deal_quotations_path(@deal) do |f| %>

  <% @deal.job_requests.each do |job_request| %>
    <div class="row align-right">
      <div class="small-6 column">
        Designs
      </div>
      <div class="small-6 column text-right">
        <strong>Price Per Piece:</strong><br>
        <%= hidden_field_tag "job_request_price_per_piece[#{job_request.id}][id]", job_request.id %>
        <%= number_field_tag "job_request_price_per_piece[#{job_request.id}][price_per_piece]", job_request.price_per_piece %>
      </div>
      <div class="small-6 column text-right">
        <strong>Configurator Price Per Piece:</strong><br>
        <span class="configurator-price" data-job-request-id="<%= job_request.id %>">
          <% job_request.product.price_ranges.each do |price_range| %>
              <% if job_request.quotation_lines_quantity.between?(price_range.from_quantity, price_range.to_quantity) %>
                <%= price_range.price_cents %>
              <% end %>
          <% end %>
        </span>
      </div>
    </div>
    <h5>Product Breakdown</h5>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Color</th>
          <% job_request.product.sizes.each do |size| %>
            <th><%= size.name %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% job_request.selected_colors.each do |color| %>
          <tr>
            <th><%= job_request.product.name %></th>
            <th><%= color.name %></th>
            <% job_request.quotation_lines.each do |line| %>
              <% if line.description.split("_")[4] == color.name %>
                <td>
                  <%= hidden_field_tag "quotation[quotation_lines_attributes][#{line.id}][id]", line.id %>
                  <%= number_field_tag "quotation[quotation_lines_attributes][#{line.id}][quantity]", line.quantity, class: "quantity-input", data: {"product-id": job_request.product_id, "job_request-id": job_request.id} %>
                </td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <div class="callout">
    <h3>Add Ons</h3>
    <%= f.fields_for :quotation_lines do |l| %>
      <% next if l.object.persisted? && (l.object.description.split("_")[1] == "product") %>
        <div class="row align-bottom">
          <div class="column">
            <%= l.input :description %>
          </div>
          <div class="column">
            <%= l.input :price_per_unit %>
          </div>
          <div class="column">
            <%= l.input :quantity %>
          </div>
          <div class="small-1 column">
            <%= l.link_to_remove class: "button alert remove-button" do %>
              <i class="fa fa-times" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
    <% end %>
    <%= f.link_to_add "Add On", :quotation_lines, class: "button warning" %>
  </div>

  <div class="row medium-unstack">
    <div class="columns">
      <%= f.input :payment_term %>
    </div>
    <div class="columns">
      <%= f.input :currency, collection: Money::Currency.all.map{|curr| ["#{curr.name} (#{curr.iso_code})", curr.iso_code]} %>
    </div>
    <div class="columns">
      <%= f.input :shipping %>
    </div>
    <div class="columns">
      <%= f.input :tax %>
    </div>
  </div>

  <div class="callout">
    <h3>Discount</h3>
    <%= f.fields_for :discount do |d| %>
    <div class="row">
      <div class="column">
        <%= d.input :type, collection: ["Discount::FlatRate", "Discount::Percentage"] %>
      </div>
      <div class="column">
        <%= d.input :value %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row columns">
    <%= f.button :submit %>
  </div>
  <% end %>
