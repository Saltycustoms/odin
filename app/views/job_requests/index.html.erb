<% content_for :header_actions do %>
  <%= link_to 'New Job Request', new_job_request_path, class: "button" %>
<% end %>

<%= render "shared/page_header", {title: "Job requests"} %>

<div class="table-scroll">
  <table>
    <thead>
      <tr>
        <th>Deal</th>
        <th>Product</th>
        <th>Color</th>
        <th>Name</th>
        <th>Sleeve</th>
        <th>Relabeling</th>
        <th>Woven tag</th>
        <th>Hang tag</th>
        <th>Pantone code</th>
        <th>Remark</th>
        <th>Sample required</th>
        <th>Budget</th>
        <th>Client comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @job_requests.each do |job_request| %>
        <tr>
          <td><%= job_request.deal_id %></td>
          <td><%= job_request.product_id %></td>
          <td><%= job_request.color_id %></td>
          <td><%= job_request.name %></td>
          <td><%= job_request.sleeve %></td>
          <td><%= job_request.relabeling %></td>
          <td><%= job_request.woven_tag %></td>
          <td><%= job_request.hang_tag %></td>
          <td><%= job_request.pantone_code %></td>
          <td><%= job_request.remark %></td>
          <td><%= job_request.sample_required %></td>
          <td><%= job_request.budget %></td>
          <td><%= job_request.client_comment %></td>
          <td><%= link_to 'Show', job_request %></td>
          <td><%= link_to 'Edit', edit_job_request_path(job_request) %></td>
          <td><%= link_to 'Destroy', job_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

