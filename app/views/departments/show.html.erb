<% content_for :header_actions do %>
  <%= link_to 'Edit', [:edit, @organization, @department] %> |
  <%= link_to 'Back', @organization || @department %>
<% end %>

<%= render "shared/page_header", {title: @department.name} %>

<%= simple_format(@department.organization.name, wrapper: 'strong') %>

  <%= @department.name %>

  <strong>Description:</strong>
  <%= @department.description %>

<h1>PIC</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Tel</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @department.pics.each do |pic| %>
      <tr>
        <td><%= pic.id %></td>
        <td><%= pic.name %></td>
        <td><%= pic.tel %></td>
        <td><%= pic.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Deal', new_department_deal_path(@department), class: "button" %>

<h1>Deals</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>No of pcs</th>
      <th>Client Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @department.deals.each do |deal| %>
      <tr>
        <td><%= deal.id %></td>
        <td><%= deal.name %></td>
        <td><%= deal.no_of_pcs %></td>
        <td><%= deal.client_deadline %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

