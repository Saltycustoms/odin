<div class="callout-header row medium-unstack align-middle">
  <div class="column">
    <h5 class="callout-header-title">Job Requests</h5>
  </div>
  <div class="column medium-3 medium-text-right">
    <%= link_to "Submit a Job Request", new_deal_job_request_path(@deal), class: "button" %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Budget</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% list.each do |job_request| %>
      <tr>
        <td>
          <%= link_to job_request.name, deal_job_request_path(@deal, job_request) %>
          <%= link_to edit_deal_job_request_path(@deal, job_request), class: "pull-right" do %>
            <span title="Edit" class="fa fa-pencil"></span>
          <% end %>
        </td>
        <td><%= job_request.product.name %></td>
        <td><%= job_request.budget %></td>
        <td class="text-center">
          <%= link_to deal_job_request_path(@deal, job_request), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-trash" title="delete"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
